<div class="welcome-card">
	<small style="color: gray;"><%= "discover things to do".upcase %></small>
</div>

<div class="card text-center" id="discover-nav">
  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Health</a>
      <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Exploration</a>
      <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Relationship</a>
    </div>
  </nav>

  <div class="tab-content" id="nav-tabContent">
    <div class="text-left tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
      <% @events_health["events"].reverse.first(20).each do |h_event| %>
        <div class="card-deck" style="display: flex;">
          <div class="card">
            <img class="card-img-top pb-3" src=<%= "#{h_event["image_url"]}" %> alt="Card image cap" style="height: 200px; object-fit: cover;">
            <small class="pl-2 pr-2">
              <p>
              <strong><%= h_event["name"].capitalize %></strong>
              <li class="pb-2" style="list-style:none;"><%= h_event["location"]["address1"].to_s + ", " + h_event["location"]["city"].to_s.capitalize %></li>
              <li class="pb-3" style="list-style:none;"><%= h_event["description"].capitalize %></li>
            </p></small>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-left tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
      <% @events_exploration["events"].reverse.first(20).each do |e_event| %>
        <div class="card-deck" style="display: flex;">
          <div class="card">
            <img class="card-img-top mb-3" src=<%= "#{e_event["image_url"]}" %> alt="Card image cap" style="height: 200px; object-fit: cover;">
            <small class="pl-2 pr-2">
              <p>
              <strong><%= e_event["name"].capitalize %></strong>
              <li class="pb-2" style="list-style:none;"><%= e_event["location"]["address1"].to_s + ", " + e_event["location"]["city"].to_s %></li>
              <li class="pb-3" style="list-style:none;"><%= e_event["description"].capitalize %></li>
            </p></small>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-left tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
      <% @events_relationships["events"].reverse.first(20).each do |r_event| %>
        <div class="card-deck" style="display: flex;">
          <div class="card">
            <img class="card-img-top pb-3" src=<%= "#{r_event["image_url"]}" %> alt="Card image cap" style="height: 200px; object-fit: cover;">
            <small class="pl-2 pr-2">
              <p>
              <strong><%= r_event["name"].capitalize %></strong>
              <li class="pb-2" style="list-style:none;"><%= r_event["location"]["address1"].to_s + ", " + r_event["location"]["city"].to_s %></li>
              <li class="pb-3" style="list-style:none;"><%= r_event["description"].capitalize %></li>
            </p></small>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

