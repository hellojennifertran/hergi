<!--  <div class="my-navbar"> -->
	<div class="navbar">
  <%= active_link_to "<i class='fas fa-home'></i><br><small>Home</small>".html_safe, root_path, active: :exact %>
  <%= active_link_to "<i class='fas fa-search-location'></i><br><small>Discover</small>".html_safe, root_path, active: :exact %>
  <div class="dropup">
    <button class="dropbtn"> 
      <i class="fas fa-plus"></i>
    </button>
    <div class="dropup-content">
		  <% Goal::CATEGORIES.each do |category| %>
		    <%= active_link_to "#{category[:icon]} #{category[:category]}".html_safe, new_goal_path(category: category[:category]) %>
		  <% end %>
      <a type="button" data-toggle="modal" data-target="#exampleModalCenter">
        <i class="fas fa-pencil-alt"></i> Blog
      </a> 
    </div>
<!-- Button trigger modal -->
  </div> 
  <%= active_link_to "<i class='fas fa-lightbulb'></i><br><small>Inspire</small>".html_safe, posts_path, active: :exact %>
  <% if current_user %>
    <%= active_link_to "<i class='fas fa-user'></i><br><small>Profile</small>".html_safe, profile_path(current_user), active: :exact %>
  <% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Share your story.</h5>
              <div class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </div>
            </div>
            <div class="modal-body">
              <%= render "posts/form" %>
            </div>
          </div>
        </div>
      </div>