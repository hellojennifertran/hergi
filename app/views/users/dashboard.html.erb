<div class="container mt-5">
  <h2>All you goals</h2>
  <div class="container mt-4">

    <%= link_to "Add New Goal", new_goal_path%>
    <% if @goals.length >= 1 %>
      <% @goals.each do |g| %>
        <div class="card-product-rented">
          <% if g.photos.attached? %>
            <%= cl_image_tag g.photos.first.key %>
          <% else %>
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <% end %>
          <div class="card-product-infos">
              <div class="description">
                <small><%= g.date %></small>
                <h2><%= g.category %></h2>
                <h3><%= g.catgory_type %></h3>
                <p><%= g.note %></p>
              </div>
              <h3><%= g.price_per_day %> Â£ </h3>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <p><%= link_to "Return to dashboard", root_path%></p>
</div>
