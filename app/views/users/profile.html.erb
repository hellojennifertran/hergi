<% if @user == current_user %>
  <%= simple_form_for @user, url: update_path(@user), method: :patch, remote: false do |f|%>
    <div class="profile-banner">
      <div class="profile-avatar">
        <img id="profile-img" src="https://cdn1.vectorstock.com/i/1000x1000/23/70/default-avatar-profile-icon-vector-18942370.jpg">
      </div>
      <div class="profile-user">
        <%# settings button - nav dropdown w/ logout, edit monthly goals, edit photo? %>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fal fa-cog"></i>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <span class="dropdown-item edit-profile">Edit Profile</span>
            <%= link_to "Edit Monthly Goals", update_goals_path, class: "dropdown-item"%>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item"%>
          </div>
        </div>
        <h3><%= @user.first_name %> <%= @user.last_name %></h3>
        <div class="parent-note">
          <div class='description-form'>
            <div class="user-note invisible-form">
              <%= f.input :note, placeholder: "Add a note", label: false %>
            </div>
          </div>
          <p class="profile-note"><%= @user.note %></p>
        </div>
      </div>
    </div>
    <% @goals.each do |goal| %>
      <div class="goal-details">
        <div class="goal-user-details">
          <%# goal.title %>
          <h4 class="goal-info category">
            <%= goal.category %>
            <% if goal.private == true %>
              <i class="fal fa-eye-slash"></i>
            <% end %>
          </h4>
          <%# goal.note %>
          <h5 class="goal-info note"><%= goal.note %></h5>
          <p class="goal-info date"><%= goal.date.strftime("%d/%B/%Y") %></p>
        </div>
      </div>
      <div class="goal-privatize invisible-form">
        <input type="checkbox" value="<%= goal.id %>" name="privatize_goals[goal_ids][]" <%= "checked" if goal.private %>>
      </div>
    <% end %>
    <div class="profile-edit-btn invisible-form">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
    <div style="height: 80px">
    </div>
  <% end %>
<% end %>
